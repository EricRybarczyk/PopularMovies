<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/review_author_name_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:textSize="16sp"
            android:text="@string/reviews_author_label"
            tools:text="Review from: " />

        <TextView
            android:id="@+id/review_author_name_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/review_author_name_label"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:textSize="16sp"
            tools:text="@string/tools_review_author_name"/>

        <TextView
            android:id="@+id/review_item_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/review_author_name_label"
            android:padding="8dp"
            android:textSize="24sp"/>

    </RelativeLayout>

 </ScrollView>